{
    "name": "bunker",
    "version": "1.0.0",
    "description": "",
    "main": "build/server/electron/main.js",
    "scripts": {
        "dev": "concurrently --success first \"npm run dev:server\" \"npm run dev:server-gui\" \"npm run dev:client\" -k",
        "dev:server": "cross-env NODE_ENV=development webpack --config webpack/webpack.server.config.js --mode development && electron .",
        "dev:client": "cross-env NODE_ENV=development webpack-dev-server --config webpack/webpack.client.config.js --mode development",
        "dev:server-gui": "cross-env NODE_ENV=development webpack-dev-server --config webpack/webpack.server-gui.config.js --mode development",
        "build:server": "webpack --config webpack/webpack.server.config.js --mode production",
        "build:client": "webpack --config webpack/webpack.client.config.js --mode production",
        "build:server-gui": "webpack --config webpack/webpack.server-gui.config.js --mode production",
        "build": "npm run build:server && npm run build:server-gui && npm run build:client",
        "package:win": "npm run build && electron-builder --win --config.directories.output=package/winApp",
        "package:linux": "npm run build && electron-builder --linux --config.directories.output=package/linuxApp"
    },
    "author": {
        "name": "Simon Riley",
        "email": "marandin@perco.ru"
    },
    "license": "ISC",
    "dependencies": {
        "qrcode.react": "^4.2.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@babel/core": "^7.28.3",
        "@babel/preset-env": "^7.28.3",
        "@babel/preset-react": "^7.27.1",
        "@babel/preset-typescript": "^7.27.1",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.3.2",
        "@mui/material": "^7.3.2",
        "@types/express": "^5.0.3",
        "@types/node": "^24.3.0",
        "@types/qrcode": "^1.5.5",
        "@types/react": "^19.1.12",
        "@types/react-dom": "^19.1.9",
        "@types/socket.io": "^3.0.2",
        "@types/ws": "^8.18.1",
        "babel-loader": "^10.0.0",
        "bufferutil": "^4.0.9",
        "concurrently": "^8.2.2",
        "copy-webpack-plugin": "^12.0.2",
        "cross-env": "^7.0.3",
        "dotenv-webpack": "^8.1.1",
        "electron": "^24.8.8",
        "electron-builder": "^24.13.3",
        "express": "^5.1.0",
        "html-webpack-plugin": "^5.6.0",
        "os": "^0.1.2",
        "react-router-dom": "^7.8.2",
        "ts-loader": "^9.5.4",
        "typescript": "^5.9.2",
        "utf-8-validate": "^6.0.5",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4",
        "zustand": "^5.0.8"
    },
    "build": {
        "productName": "Bunker",
        "files": [
            "build/**/*",
            "node_modules/**/*",
            "!node_modules/electron/build/**/*",
            "!node_modules/.bin",
            "!**/*.map",
            "!**/__tests__",
            "!**/test",
            "!**/*.md"
        ],
        "extraResources": [
            {
                "from": "resources/",
                "to": "resources/",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "compression": "maximum",
        "win": {
            "requestedExecutionLevel": "requireAdministrator",
            "target": "nsis",
            "icon": "src/accets/icons/icon.ico",
            "appId": "Bunker"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "src/assets/icons/256x256.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "src/assets/icons/icon.ico",
            "uninstallerIcon": "src/assets/icons/icon.ico",
            "installerHeaderIcon": "src/assets/icons/icon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Bunker"
        }
    }
}
